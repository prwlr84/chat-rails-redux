





<div class="login">
  <h2>Welcome to my chat app!</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "col-md-3" }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  placeholder: "Email address",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  placeholder: "Password",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <div class="links">
    <div class="logos">
      <%= image_tag 'rails.svg' %>
      <%= image_tag 'react.svg' %>
      <%= image_tag 'redux.svg' %>
    </div>
    <%= image_tag 'signatureLogo.svg' %>
    <div><%= render "devise/shared/links" %></div>
  </div>
</div>
